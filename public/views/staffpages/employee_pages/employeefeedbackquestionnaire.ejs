    <script>
        // Function to fetch users from the server
        async function fetchUsers() {
            const response = await fetch('/employee/employeefeedbackquestionnaire');
            const data = await response.json();
    
            if (data.success) {
                const userSelect = document.getElementById('userSelect');
                data.users.forEach(user => {
                    const option = document.createElement('option');
                    option.value = user.userId;
                    option.textContent = `${user.firstName} ${user.lastName}`;
                    userSelect.appendChild(option);
                });
            } else {
                console.error('Error fetching users:', data.message);
            }
        }
    
        async function loadFeedbackForm() {
    const userSelect = document.getElementById('userSelect');
    const selectedUserId = userSelect.value; // Get the selected user ID
    const feedbackSection = document.getElementById('feedback-section');

    console.log("Selected User ID:", selectedUserId); // Log selected user ID

    if (selectedUserId) {
        // Show feedback section
        feedbackSection.style.display = 'block';
        
        // Set the hidden input value
        document.getElementById('selectedUser  Id').value = selectedUserId; // Set the hidden input value

        const quarterElement = document.getElementById('quarter'); // Get the selected quarter element
        if (!quarterElement) {
            console.error("Quarter element not found.");
            return;
        }
        
        const quarter = quarterElement.value; // Get the selected quarter
        console.log("Selected Quarter:", quarter); // Log selected quarter

        // Fetch user details and feedback data
        const response = await fetch(`/employee/employeefeedbackquestionnaire/${selectedUserId}?quarter=${quarter}`);
        if (!response.ok) {
            const errorText = await response.text(); // Get the response text to check for HTML errors
            console.error('Error fetching feedback data:', errorText);
            return; // Exit the function if there's an error
        }
        
        const data = await response.json();

        if (data.success) {
            // Populate user details
            const user = data.user; // Assuming user data is returned
            document.getElementById('employeeName').innerText = `${user.lastName}, ${user.firstName}`;
            document.getElementById('employeePosition').innerText = user.jobpositions.jobTitle; // Adjust based on your data structure
            document.getElementById('employeeDepartment').innerText = user.departments.deptName; // Adjust based on your data structure

            // Clear previous feedback rows
            document.getElementById('feedback-table-body').innerHTML = '';
            document.getElementById('hard-skills-table-body').innerHTML = '';
            document.getElementById('soft-skills-table-body').innerHTML = '';

            // Populate objectives
            data.feedbackDetails.objectives.forEach(objective => {
                addFormFeedbackRow(objective);
            });

            // Populate hard skills
            addFormFeedbackSkillsRows(data.feedbackDetails.hardSkills, 'hard');

            // Populate soft skills
            addFormFeedbackSkillsRows(data.feedbackDetails.softSkills, 'soft');

            // Handle dates
            const feedbacks = data.feedbackDetails; // Assuming this contains feedbacks for different quarters
            let startDate = '';
            let endDate = '';
            let isViewOnly = false;

            if (feedbacks.length > 0) { 
                const feedback = feedbacks[0]; // Assuming you want the first feedback for demonstration
                startDate = feedback.setStartDate;
                endDate = feedback.setEndDate;
                isViewOnly = true; // Set to view only after submission
            }

            if (isViewOnly) {
                // Create temporary elements to display start and end dates as text
                const startDateDisplay = document.createElement('span');
                startDateDisplay.innerText = startDate; // Display start date as text

                const endDateDisplay = document.createElement('span');
                endDateDisplay.innerText = endDate; // Display end date as text

                // Replace the input fields with text
                const startDateInput = document.getElementById('startDate');
                const endDateInput = document.getElementById('endDate');

                // Clear the input fields
                startDateInput.parentNode.replaceChild(startDateDisplay, startDateInput);
                endDateInput.parentNode.replaceChild(endDateDisplay, endDateInput);
            } else {
                // Set input value if editable
                document.getElementById('startDate').value = startDate;
                document.getElementById('endDate').value = endDate;
            }
        } else {
            console.error('Error fetching feedback data:', data.message);
        }
    } else {
        feedbackSection.style.display = 'none'; // Hide feedback section if no user is selected
    }
}
function addFormFeedbackRow(objective) {
    const tbody = document.getElementById('feedback-table-body');
    if (!tbody) {
        console.error("Feedback table body not found.");
        return;
    }

    const row = document.createElement('tr');

    console.log("Objective:", objective);
    console.log("Qualitative Question:", objective.objectiveQualiQuestion);

    row.innerHTML = `
        <td><strong>${objective.objectiveDescrpt || 'N/A'}</strong></td>
        <td><strong>${objective.objectiveKPI || 'N/A'}</strong></td>
        <td><strong>${objective.objectiveTarget || 'N/A'}</strong></td>
        <td><strong>${objective.objectiveUOM || '%'}</strong></td>
        <td><strong>${(objective.objectiveAssignedWeight * 100) || 'N/A'}%</strong></td>
    `;
    tbody.appendChild(row);

    const inputRow = document.createElement('tr');
    const inputId = `qualitativeInput_${objective.objectiveId}`;
    const questionText = objective.objectiveQualiQuestion || 'Enter your feedback here';

    inputRow.innerHTML = `
        <td colspan="5">
            <div style="margin-bottom: 10px;">
                <label for="${inputId}">▶ Guide Question here for qualitative and quantitative feedback:</label>
                <input id="${inputId}" type="text"
                    value="${questionText.trim() ? questionText : ''}"  
                    ${questionText.trim() ? '' : 'placeholder="Enter your feedback here"'} 
                    data-objective-id="${objective.objectiveId}" 
                >
            </div>
        </td>
    `;
    tbody.appendChild(inputRow);

    // Add Rater's View (Quantitative Rating and Qualitative Feedback)
    const raterRow = document.createElement('tr');
    const starRatingId = `starRating${objective.objectiveId}`;
    const ratingSectionId = `ratingSection${objective.objectiveId}`;

    raterRow.innerHTML = `
        <td colspan="5">
            <button type="button" onclick="toggleRatingSection('${ratingSectionId}')" style="background-color: gray; color: white; border: none; padding: 8px 12px; cursor: pointer; border-radius: 4px;">
                View Rater's View
            </button>
            <div id="${ratingSectionId}" style="display: none; margin-top: 10px;">
                <div style="margin-bottom: 10px;">
                    <label><strong>Quantitative (Rating Scale):</strong></label>
                    <div style="font-size: 14px; margin-top: 5px;">
                        Please rate the accomplishment of the corresponding objective for the quarter on a scale of 1 to 5.
                    </div>
                    <span style="font-size: 24px; cursor: pointer;" id="${starRatingId}" data-rating="0">
                        <i class="fa-solid fa-star" data-value="1"></i>
                        <i class="fa-solid fa-star" data-value="2"></i>
                        <i class="fa-solid fa-star" data-value="3"></i>
                        <i class="fa-solid fa-star" data-value="4"></i>
                        <i class="fa-solid fa-star" data-value="5"></i>
                    </span>
                </div>
                <div style="margin-bottom: 10px;">
                    <label><strong>Qualitative (Open-ended):</strong></label>
                    <div style="font-size: 14px; margin-top: 5px;">
                        Please provide qualitative feedback regarding the corresponding objective achieved during the quarter.
                    </div>
                    <input type="text" id="qualitativeFeedback_${objective.objectiveId}" placeholder="Place your qualitative feedback here." style="width: 100%; box-sizing: border-box;">
                </div>
            </div>
        </td>
    `;
    tbody.appendChild(raterRow);

    // Add click event listeners to the stars for the Rater's View
    const stars = document.querySelectorAll(`#${starRatingId} .fa-star`);
    stars.forEach(star => {
        star.addEventListener('click', function() {
            const rating = this.getAttribute('data-value');
            const starContainer = document.getElementById(starRatingId);
            starContainer.setAttribute('data-rating', rating);
            updateStarDisplay(stars, rating);
        });
    });
}

                            
