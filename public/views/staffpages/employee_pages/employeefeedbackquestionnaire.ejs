        </header>
        
        <select id="userSelect" onchange="loadFeedbackForm()">
            <option value="">-- Select User --</option>
            <% usersArray.forEach(user => { %>
                <option value ="<%= user.userId %>">
                    <%= user.firstName %> <%= user.lastName %>
