    const isWithin = now >= startDate && now <= endDate;
    
    console.log('üìÖ Training period check:', {
        currentDate: now.toISOString(),
        startDate: startDate.toISOString(),
        endDate: endDate.toISOString(),
        isWithin: isWithin
    });
    
    return isWithin;
}

