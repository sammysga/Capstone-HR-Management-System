        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
        /* Progress bar styling */
        .progress {
            width: 100%;
            background-color: #f3f3f3;
            border-radius: 5px;
            overflow: hidden;
        }
        .progress-bar {
            height: 20px;
            width: 0; /* Set width dynamically with inline style */
            background-color: #4caf50; /* Green */
            text-align: center; /* Centered text inside the bar */
            line-height: 20px; /* Align text vertically */
            color: white; /* Text color */
            position: relative; /* Enable positioning for absolute elements */
        }
        .progress-text {
            position: absolute; /* Positioning text absolutely */
            left: 50%; /* Centering horizontally */
            transform: translateX(-50%); /* Offset to center text */
            top: 50%; /* Centering vertically */
            transform: translate(-50%, -50%); /* Final centering */
            color: white; /* Text color */
            font-size: 14px; /* Adjust font size as needed */
        }
    </style>
</head>
