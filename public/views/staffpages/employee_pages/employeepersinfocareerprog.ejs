  .profile-container { 
    display: flex; 
    align-items: center; 
    margin-bottom: 20px; 
}
.profile-pic { 
    width: 80px; 
    height: 80px; 
    border-radius: 50%; 
    object-fit: cover; 
    margin-right: 15px; 
}
.profile-info { 
    display: flex; 
    flex-direction: column; 
}
.profile-info h3 { 
    margin: 0; 
    font-size: 1.4rem; 
