.profile-info p { 
    margin: 5px 0; 
    font-size: 1rem; 
    color: #666; 
}
.edit-btn, .save-btn { 
    background-color: #124A5C; /* Updated color from useracc.ejs */
    color: white; 
    border: none; 
    padding: 10px 20px; 
    border-radius: 5px; 
    font-size: 1rem; 
    cursor: pointer; 
    margin-top: 10px; 
    transition: background-color 0.3s ease; 
}
.edit-btn:hover, .save-btn:hover { 
    background-color: #059ca4; /* Updated hover color from useracc.ejs */
}
.form-input { 
    width: 100%; 
    padding: 10px; 
    margin: 10px 0; 
    border-radius: 5px; 
    border: 1px solid #ccc; 
    display: none; 
}
.form-text { 
    font-size: 1.1rem; 
    color: #09191F; /* Updated color from useracc.ejs */
}
.milestone-container { 
    margin: 30px 0; 
}
.milestone { 
    position: relative; 
    margin-left: 20px; 
    margin-bottom: 30px; 
}
.milestone:before { 
    content: ''; 
    position: absolute; 
    left: -10px; 
    top: 0; 
    height: 100%; 
    border-left: 2px solid #124A5C; /* Updated color from useracc.ejs */
}
.milestone-label { 
    position: relative; 
    padding-left: 20px; 
}
.milestone-label h4 { 
    margin: 0; 
    font-size: 1.2rem; 
    color: #124A5C; /* Updated color from useracc.ejs */
}
.milestone-label p { 
