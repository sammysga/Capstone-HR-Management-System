<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Employee's Records and Performance History</title>
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/hr_page.css"> 
    <style>
        /* Main Content Styles */
        .main-content {
            margin-left: 300px; /* Space for sidebar */
            padding: 20px;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            box-sizing: border-box;
            overflow-x: auto;
        }

        /* Department Header Styles */
        .department-header {
            color: #07ACB9; /* Department header color */
            font-size: 1.5em;
            font-weight: bold;
            margin-top: 20px;
        }

        /* Table Styles */
        .staff-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            table-layout: fixed; /* Ensures columns are equally spaced */
        }

        .staff-table th, .staff-table td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: left;
            vertical-align: middle;
            word-wrap: break-word; /* Ensures long text wraps within the cell */
        }

        th {
            background-color: #e0e4e8;
            font-weight: 600;
            text-align: center;
        }

        /* Set a consistent width for each column */
        .staff-table th:nth-child(1), .staff-table td:nth-child(1) {
            width: 25%; /* Job Position */
        }
        .staff-table th:nth-child(2), .staff-table td:nth-child(2) {
            width: 25%; /* Last Name */
        }
        .staff-table th:nth-child(3), .staff-table td:nth-child(3) {
            width: 25%; /* First Name */
        }
        .staff-table th:nth-child(4), .staff-table td:nth-child(4) {
            width: 25%; /* Email */
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .main-content {
                margin-left: 0;
                padding: 10px;
            }
            .sidebar {
                display: none;
            }
        }
    </style>
</head>
<body>
    
    <%- include('../../partials/hr_partials') %>
    <div class="main-content">
        <h1>View Employee's Records and Performance History</h1>
        <div id="staffTableContainer">
            <% if (departments && departments.length > 0) { %>
                <% departments.forEach(function(department) { %>
                    <div class="department-header"><%= department.deptName %></div>
                    <table class="staff-table">
                        <thead>
                            <tr>
                                <th>Job Position</th>
                                <th>Last Name</th>
                                <th>First Name</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (department.staff && department.staff.length > 0) { %>
                                <% department.staff.forEach(function(staff) { %>
                                    <tr onclick="window.location.href='/hr/records-performance-tracker/<%= staff.userId %>'">
                                        <td><%= staff.jobTitle %></td>
                                        <td><%= staff.lastName %></td>
                                        <td><%= staff.firstName %></td>
                                        <td><%= staff.userEmail %></td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr><td colspan="4">No staff members available</td></tr>
                            <% } %>
                        </tbody>
                        
                    </table>
                <% }); %>
            <% } else { %>
                <p>No departments available</p>
            <% } %>
        </div>
    </div>
    

    <script>
        // Toggle active class for sidebar links
        document.querySelectorAll('.sidebar ul li a').forEach(link => {
            link.addEventListener('click', function() {
                document.querySelectorAll('.sidebar ul li a').forEach(link => link.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Toggle collapsible content
        document.querySelectorAll('.collapsible-header').forEach(header => {
            header.addEventListener('click', function() {
                var content = this.nextElementSibling;
                if (content.style.display === 'block') {
                    content.style.display = 'none';
                } else {
                    document.querySelectorAll('.collapsible-content').forEach(item => {
                        if (item !== content) {
                            item.style.display = 'none';
                        }
                    });
                    content.style.display = 'block';
                }
            });
        });

        document.querySelectorAll("tr[data-user-id]").forEach(row => {
    row.addEventListener("click", () => {
        const userId = row.getAttribute("data-user-id");
        window.location.href = `/hr/records-performance-tracker/${userId}`;
    });
});

    </script>
</body>
</html>
