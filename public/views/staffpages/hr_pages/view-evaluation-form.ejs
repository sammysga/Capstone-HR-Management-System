<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Evaluation Form</title>
    <link rel="stylesheet" href="/css/sidebar.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            padding: 20px;
            margin: 0;
        }

        h1 {
            color: #124A5C;
            margin-bottom: 20px;
        }

        .container {
            margin-left: 280px;
            padding: 20px;
        }

        .evaluation-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 100%;
            margin: 20px auto;
        }

        .applicant-info {
            margin-bottom: 30px;
        }

        .applicant-info h2 {
            color: #124A5C;
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .info-item {
            margin-bottom: 10px;
        }

        .info-item label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #333;
        }

        .info-item span {
            display: block;
            padding: 8px;
            background-color: #f9f9f9;
            border-radius: 4px;
        }

        .evaluation-summary {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #ddd;
        }

        .evaluation-summary h2 {
            color: #124A5C;
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .score-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .score-label {
            font-weight: bold;
            margin-right: 15px;
            font-size: 18px;
        }

        .score-value {
            font-size: 24px;
            font-weight: bold;
            color: #124A5C;
            background-color: #f0f0f0;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .button-container {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .action-button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .reject-button {
            background-color: #e74c3c;
            color: white;
        }

        .pass-button {
            background-color: #27ae60;
            color: white;
        }

        .back-button {
            background-color: #7f8c8d;
            color: white;
        }

        .action-button:hover {
            opacity: 0.9;
        }

        .categories-container {
            margin-top: 30px;
        }

        .category {
            margin-bottom: 20px;
        }

        .category-header {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 10px;
            color: #124A5C;
        }

        .category-score {
            background-color: #f0f0f0;
            padding: 8px 15px;
            border-radius: 4px;
            display: inline-block;
            font-weight: bold;
        }

        @media (max-width: 768px) {
            .container {
                margin-left: 0;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <%- include('../../partials/hr_partials') %>
    <div class="container">
        <h1>Evaluation Form Review</h1>
        
        <div class="evaluation-container">
            <div class="applicant-info">
                <h2>Applicant Information</h2>
                <div class="info-grid">
                    <div class="info-item">
                        <label>Candidate Name:</label>
                        <span><%= applicant.firstName %> <%= applicant.lastName %></span>
                    </div>
                    <div class="info-item">
                        <label>Position Applied:</label>
                        <span><%= applicant.jobTitle || 'N/A' %></span>
                    </div>
                    <div class="info-item">
                        <label>Department:</label>
                        <span><%= applicant.deptName || 'N/A' %></span>
                    </div>
                    <div class="info-item">
                        <label>Email:</label>
                        <span><%= applicant.userEmail || 'N/A' %></span>
                    </div>
                    <div class="info-item">
                        <label>Status:</label>
                        <span><%= applicant.applicantStatus || 'N/A' %></span>
                    </div>
                </div>
            </div>
            
            <div class="evaluation-summary">
                <h2>Evaluation Summary</h2>
                <div class="score-container">
                    <div class="score-label">Total Assessment Rating:</div>
                    <div class="score-value"><%= evaluationScore %></div>
                </div>
                
                <div class="categories-container">
                    <div class="category">
                        <div class="category-header">Professional Background and Experience</div>
                        <div class="category-score">Score: <%= applicant.professionalBackgroundScore || 'N/A' %></div>
                    </div>
                    
                    <div class="category">
                        <div class="category-header">Functional Skills</div>
                        <div class="category-score">Score: <%= applicant.functionalSkillsScore || 'N/A' %></div>
                    </div>
                    
                    <div class="category">
                        <div class="category-header">Teamwork and Collaboration</div>
                        <div class="category-score">Score: <%= applicant.teamworkScore || 'N/A' %></div>
                    </div>
                    
                    <div class="category">
                        <div class="category-header">Value Creation</div>
                        <div class="category-score">Score: <%= applicant.valueCreationScore || 'N/A' %></div>
                    </div>
                    
                    <div class="category">
                        <div class="category-header">Integrity</div>
                        <div class="category-score">Score: <%= applicant.integrityScore || 'N/A' %></div>
                    </div>
                    
                    <div class="category">
                        <div class="category-header">Problem-Solving Abilities</div>
                        <div class="category-score">Score: <%= applicant.problemSolvingScore || 'N/A' %></div>
                    </div>
                    
                    <div class="category">
                        <div class="category-header">Motivation and Fit</div>
                        <div class="category-score">Score: <%= applicant.motivationScore || 'N/A' %></div>
                    </div>
                </div>
            </div>
            
            <div class="button-container">
                <button class="action-button back-button" onclick="window.location.href='/hr/applicant-tracker-jobposition'">Back</button>
                <button class="action-button reject-button" onclick="rejectApplicant('<%= applicantId %>')">Reject Applicant</button>
                <button class="action-button pass-button" onclick="passApplicant('<%= applicantId %>')">Pass Applicant</button>
            </div>
        </div>
    </div>

    <script>
        // Function to handle rejecting an applicant
        function rejectApplicant(applicantId) {
            if (!confirm("Are you sure you want to reject this applicant? This action cannot be undone.")) {
                return;
            }

            fetch('/hr/reject-applicant', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ applicantId }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert("Applicant has been rejected successfully.");
                    window.location.href = '/hr/applicant-tracker-jobposition';
                } else {
                    alert("Failed to reject applicant: " + (data.message || "Unknown error"));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert("An error occurred while rejecting the applicant.");
            });
        }

        // Function to handle passing an applicant
        function passApplicant(applicantId) {
            if (!confirm("Are you sure you want to pass this applicant to the next stage? This action cannot be undone.")) {
                return;
            }

            fetch('/hr/pass-applicant', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ applicantId }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert("Applicant has been passed to the next stage successfully.");
                    window.location.href = '/hr/applicant-tracker-jobposition';
                } else {
                    alert("Failed to pass applicant: " + (data.message || "Unknown error"));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert("An error occurred while passing the applicant.");
            });
        }
    </script>
</body>
</html>