            padding: 10px 10px;
            border: 1px solid #ddd;
        }

        .tracking-table th,
        .tracking-table td {
            text-align: left;
        }

        .tracking-table th:nth-child(1),
        .tracking-table td:nth-child(1) {
            width: 10%; 
