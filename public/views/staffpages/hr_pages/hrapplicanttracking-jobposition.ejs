        } else {
            console.error(` [P2 Pass] API error: ${data.message}`);
            alert("Error updating applicant status: " + (data.message || "Unknown error"));
        }
    })
    .catch(error => {
        console.error(" [P2 Pass] Network error:", error);
        alert("Failed to update applicant status.");
    });
