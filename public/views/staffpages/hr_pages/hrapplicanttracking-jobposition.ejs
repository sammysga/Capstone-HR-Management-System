                    console.log(`âœ… [P2 Finalize] Added ${applicantId} to passed list (${statusText})`);
                } else if (statusText.includes('FAILED')) {
                    failedApplicantIds.push(applicantId);
                    console.log(`âŒ [P2 Finalize] Added ${applicantId} to failed list (${statusText})`);
