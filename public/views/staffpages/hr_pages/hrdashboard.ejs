                    <thead>
                        <tr>
                            <th>Employee Name</th>
                            <th>Department</th>
                            <th>Request Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>nadine lustre</td>
                            <td>Marketing</td>
                            <td>12-06-2024</td>
                            <td>Pending</td>
                            <td><a href="/hr/offboarding-request">View Request</a></td>
