            const key = keyParts[i];
            const isLast = i === keyParts.length - 1;
            
            if (isLast) {
                current[key] = value;
            } else {
                if (!current[key]) {
                    const nextKey = keyParts[i + 1];
                    current[key] = !isNaN(parseInt(nextKey)) ? [] : {};
