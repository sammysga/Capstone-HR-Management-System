        // Add objective function with dropdown
        function addObjective() {
            const objectiveDropdown = document.getElementById('objectiveDropdown');
            const selectedValue = objectiveDropdown.value.trim();
            
            if (selectedValue && !selectedObjectives.includes(selectedValue)) {
                selectedObjectives.push(selectedValue);
                updateObjectivesDisplay();
                objectiveDropdown.value = ''; // Reset dropdown
            }
        }

        // Update objectives display with pill tags
        function updateObjectivesDisplay() {
            const objectivesList = document.getElementById('objectivesList');
            objectivesList.innerHTML = '';
            
            selectedObjectives.forEach(objective => {
                const pillTag = document.createElement('div');
                pillTag.className = 'pill-tag';
                pillTag.innerHTML = `
                    ${objective}
                    <span class="remove-pill" onclick="removeObjective('${objective}')">×</span>
                `;
                objectivesList.appendChild(pillTag);
            });
        }

        // Remove objective
        function removeObjective(objectiveToRemove) {
            selectedObjectives = selectedObjectives.filter(obj => obj !== objectiveToRemove);
            updateObjectivesDisplay();
        }

        // Add skill function with dropdown
        function addSkill() {
            const skillDropdown = document.getElementById('skillDropdown');
            const selectedValue = skillDropdown.value.trim();
            
            if (selectedValue && !selectedSkills.includes(selectedValue)) {
                selectedSkills.push(selectedValue);
                updateSkillsDisplay();
                skillDropdown.value = ''; // Reset dropdown
            }
        }

        // Update skills display with pill tags
        function updateSkillsDisplay() {
            const skillsList = document.getElementById('skillsList');
            skillsList.innerHTML = '';
            
            selectedSkills.forEach(skill => {
