// Helper function to format status text
function formatStatus(status) {
    switch(status) {
        case 'in-progress':
            return 'In Progress';
        case 'completed':
            return 'Completed';
        case 'not-started':
            return 'Not Started';
        case 'overdue':
            return 'Overdue';
        case 'no-training':
            return 'No Training';
        default:
            return status.charAt(0).toUpperCase() + status.slice(1);
    }
}

