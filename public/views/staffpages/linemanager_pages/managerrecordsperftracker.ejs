                        currentY = 30;
                    }
                    
                    doc.setFontSize(14);
                    doc.setFont('helvetica', 'bold');
                    doc.setTextColor(31, 41, 55);
                    doc.text('PERFORMANCE ANALYSIS & INSIGHTS', margin, currentY);
