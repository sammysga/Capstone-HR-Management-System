                }
                
                currentY = addSkillsComparison();
                
                // ================================================================
                // PERFORMANCE ANALYSIS & INSIGHTS
                // ================================================================
                function addPerformanceAnalysis() {
                    // Check if we need a new page
                    if (currentY > pageHeight - 120) {
