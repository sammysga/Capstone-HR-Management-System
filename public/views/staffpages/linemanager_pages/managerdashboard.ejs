            border-bottom: 1px solid #ddd;
            margin: 0 auto 15px;
            width: 90%;
            max-width: 1400px;
            background-color: #fff;
            border-radius: 8px 8px 0 0;
            overflow: hidden;
            position: sticky;
            top: 0;
            z-index: 100;
