// NEW: Function to navigate search results with keyboard
function navigateSearchResults(direction) {
    const searchResults = document.querySelectorAll('.search-result-item:not(.disabled)');
    let currentIndex = -1;
    
    // Find currently highlighted item
    searchResults.forEach((item, index) => {
        if (item.classList.contains('keyboard-highlight')) {
            currentIndex = index;
        }
    });
    
    // Remove current highlight
    searchResults.forEach(item => {
        item.classList.remove('keyboard-highlight');
        item.style.backgroundColor = item.classList.contains('new-category') ? 
            'linear-gradient(135deg, #e8f5e8, #f0f8f0)' : 'white';
    });
    
    // Calculate new index
    if (direction === 'down') {
        currentIndex = (currentIndex + 1) % searchResults.length;
    } else {
        currentIndex = currentIndex <= 0 ? searchResults.length - 1 : currentIndex - 1;
    }
    
    // Highlight new item
    if (searchResults[currentIndex]) {
        const item = searchResults[currentIndex];
        item.classList.add('keyboard-highlight');
        item.style.backgroundColor = item.classList.contains('new-category') ? 
            'linear-gradient(135deg, #d4edda, #e8f5e8)' : '#f0f8ff';
        
        // Scroll into view if needed
        item.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
        
        // Add Enter key listener for selection
        const handleEnter = (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                item.click();
                document.removeEventListener('keydown', handleEnter);
            }
        };
        document.addEventListener('keydown', handleEnter);
        
        // Remove listener after 5 seconds to prevent memory leaks
        setTimeout(() => {
            document.removeEventListener('keydown', handleEnter);
        }, 5000);
    }
