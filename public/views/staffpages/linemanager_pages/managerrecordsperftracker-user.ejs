// Helper function to calculate overall rating
function calculateOverallRating(answer) {
    let totalRating = 0;
    let ratingCount = 0;
    
    // Count objective ratings
    if (answer.objectiveAnswers && answer.objectiveAnswers.length > 0) {
        answer.objectiveAnswers.forEach(obj => {
            if (obj.rating && obj.rating > 0) {
                totalRating += obj.rating;
                ratingCount++;
            }
        });
    }
    
    // Count skill ratings
    if (answer.skillRatings && Object.keys(answer.skillRatings).length > 0) {
        Object.values(answer.skillRatings).forEach(skill => {
            if (skill.rating && skill.rating > 0) {
                totalRating += skill.rating;
                ratingCount++;
            }
        });
    }
    
    return ratingCount > 0 ? (totalRating / ratingCount) : 0;
}

