async function saveObjectives(event) {
    event.preventDefault();
    
    // Get form values properly
    const departmentId = document.getElementById("departmentId").value; // Add this hidden field
    const performancePeriodYear = document.getElementById("performanceDate").textContent;
    const userId = document.getElementById("userId").value; // Add this hidden field

    // Validate required IDs
    if (!userId || !jobId) {
        console.error("Missing required IDs");
        alert("System error: Missing user information. Please refresh the page.");
        return;
    }

    // Collect objectives in format backend expects
    const formData = {
        userId: userId,
        jobId: jobId,
        departmentId: departmentId,
        performancePeriodYear: performancePeriodYear,
        objectiveDescrpt: [],
        objectiveKPI: [],
        objectiveTarget: [],
        objectiveUOM: [],
        objectiveAssignedWeight: []
    };

    // Calculate total weight and collect data
    let totalWeight = 0;
    const rows = document.querySelectorAll("#progress-table-body tr");

    rows.forEach(row => {
        const descriptionInput = row.querySelector('input[name="objectiveDescrpt"]');
        const kpiInput = row.querySelector('input[name="objectiveKPI"]');
        const targetInput = row.querySelector('input[name="objectiveTarget"]');
        const uomInput = row.querySelector('input[name="objectiveUOM"]');
        const weightInput = row.querySelector('input[name="objectiveAssignedWeight"]');

        if (descriptionInput && kpiInput && targetInput && uomInput && weightInput) {
            const weight = parseFloat(weightInput.value);
            totalWeight += weight;

            formData.objectiveDescrpt.push(descriptionInput.value);
            formData.objectiveKPI.push(kpiInput.value);
            formData.objectiveTarget.push(targetInput.value);
            formData.objectiveUOM.push(uomInput.value);
            formData.objectiveAssignedWeight.push(weight.toString()); // Send as string
        }
    });

    // Validate total weight
    if (totalWeight !== 100) {
        alert("Total assigned weight must be exactly 100% to save.");
        return;
    }

    try {
        // Show loading state
        const saveButton = document.getElementById("saveButton");
        if (saveButton) {
            saveButton.disabled = true;
            saveButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
        }

        // Send data to server
        const response = await fetch(`/linemanager/records-performance-tracker/${userId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(formData)
        });

        if (!response.ok) {
            throw new Error(`Server error: ${response.status}`);
        }

        // Handle both JSON and redirect responses
        const contentType = response.headers.get('content-type');
        if (contentType && contentType.includes('application/json')) {
            const result = await response.json();
            if (result.success) {
                window.location.href = `/linemanager/records-performance-tracker/view/${userId}`;
            } else {
                throw new Error(result.message || "Save failed");
            }
        } else {
            // Handle redirect
            window.location.href = await response.text();
        }
    } catch (error) {
        console.error("Error saving objectives:", error);
        alert(`Error: ${error.message}`);
        
        // Reset button state
        const saveButton = document.getElementById("saveButton");
        if (saveButton) {
            saveButton.disabled = false;
            saveButton.innerHTML = '<i class="fas fa-save"></i> Save Objectives';
        }
    }
}

