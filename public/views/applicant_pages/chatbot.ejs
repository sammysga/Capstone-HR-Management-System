            font-size: 1.5rem;
            margin: 0;
            font-weight: 600;
        }
        
        .chat-header-buttons {
            display: flex;
            gap: 10px;
        }
        
        .back-button {
            background-color: transparent;
            border: 1px solid white;
            color: white;
            border-radius: 5px;
            padding: 8px 15px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .back-button:hover {
