        }
        
        .user-message {
            background-color: #B4E3E3;
            align-self: flex-end;
            border-bottom-right-radius: 4px;
            color: #09191F;
        }
        
        .bot-message {
            background-color: white;
            align-self: flex-start;
            border-bottom-left-radius: 4px;
            color: #09191F;
            border-left: 4px solid #07ACB9;
        }
        
        .message-timestamp {
            font-size: 0.7rem;
            color: #6c757d;
            margin-top: 5px;
            text-align: right;
        }
        
        .chat-input {
            display: flex;
            background-color: white;
            border-top: 1px solid #eee;
            padding: 15px;
            position: relative;
        }
        
        .chat-input-wrapper {
            display: flex;
            width: 100%;
            border-radius: 24px;
            overflow: hidden;
            border: 1px solid #ddd;
            background-color: white;
            transition: all 0.3s ease;
