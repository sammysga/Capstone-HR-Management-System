<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= job.jobTitle %> - Job Details</title>
    <link rel="stylesheet" href="/css/publicapplicant.css">
    <style>
        .job-details {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .job-details h1 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #333;
        }

        .job-details .description {
            margin-bottom: 20px;
            color: #666;
        }

        .apply-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .apply-button:hover {
            background-color: #45a049;
        }

        .requirements {
            margin-top: 20px;
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 6px;
        }
    </style>
</head>
<body>
    <%- include('../partials/publicheader') %>

    <div class="job-details">
        <!-- Display the Job Title as Title -->
        <h1><%= job.jobTitle %></h1>
        
        <!-- Display Job Location -->
        <p><strong>Location:</strong> <%= job.jobBranch %></p>
        
        <!-- Display the Full Job Description -->
        <p class="description"><%= job.jobDescrpt %></p>
        
        <!-- Simple Job Status Display -->
        <p><strong>Status:</strong> <%= job.isActiveJob ? "Active" : "Inactive" %></p>

        <!-- Job Requirements Section -->
        <div class="requirements">
            <h2>Job Requirements</h2>
            <% if (requirements && requirements.length > 0) { %>
                <ul>
                    <% requirements.forEach(function(req) { %>
                        <li><strong><%= req.jobReqName %>:</strong> <%= req.jobReqDescript %></li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No requirements listed for this job.</p>
            <% } %>
        </div>

        <!-- Apply Button -->
        <a href="/apply/<%= job.jobId %>" class="apply-button">Apply Now</a>
    </div>
</body>
</html>
