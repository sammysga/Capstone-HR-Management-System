<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= job.jobTitle %> - Job Details</title>
    
    <!-- Link to Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/css/publicapplicant.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f9f9f9;
        }

        .job-details {
            max-width: 800px;
            margin: 20px auto;  /* Add margin for spacing */
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .job-details h1 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #333;
        }

        .job-details .description {
            margin-bottom: 20px;
            color: #666;
        }

        .apply-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .apply-button:hover {
            background-color: #45a049;
        }

        .requirements, .skills {
            margin-top: 20px;
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 6px;
        }
    </style>
</head>
<body>
    <%- include('../partials/publicheader') %>

    <div class="job-details">
        <!-- Display the Job Title as Title -->
        <h1><%= job.jobTitle %></h1>
        
        
        <!-- Display the Full Job Description -->
        <p class="description"><%= job.jobDescrpt %></p>
        
        <!-- Simple Job Status Display -->
        <p><strong>Status:</strong> <%= job.isActiveJob ? "Active" : "Inactive" %></p>

<!-- Job Requirements Section -->
<div class="requirements">
    <h2>Job Requirements</h2>

    <!-- Certification Requirements Section -->
    <% if (certifications && certifications.length > 0) { %>
        <ul>
            <% certifications.forEach(function(cert) { %>
                <li><strong><%= cert.jobReqCertificateType %>:</strong> <%= cert.jobReqCertificateDescrpt %></li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No certification requirements listed for this job.</p>
    <% } %>

    <!-- Degree Requirements Section -->
    <% if (degrees && degrees.length > 0) { %>
        <ul>
            <% degrees.forEach(function(degree) { %>
                <li><strong><%= degree.jobReqDegreeType %>:</strong> <%= degree.jobReqDegreeDescrpt %></li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No degree requirements listed for this job.</p>
    <% } %>

    <!-- Experience Requirements Section -->
        <% if (experiences && experiences.length > 0) { %>
            <ul>
                <% experiences.forEach(function(experience) { %>
                    <li><%= experience.jobReqExperienceType %>: <%= experience.jobReqExperienceDescrpt %></li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No experience required.</p>
        <% } %>
    
</div>




  <!-- Job Skills Section -->
<div class="skills">
    <h2>Skills</h2>

    <!-- Hard Skills Section -->
    <div class="hard-skills">
        <h3>Hard Skills</h3>
        <% if (hardSkills && hardSkills.length > 0) { %>
            <ul>
                <% hardSkills.forEach(function(skill) { %>
                    <li><strong><%= skill.jobReqSkillName %></strong></li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No hard skills listed for this job.</p>
        <% } %>
    </div>

    <!-- Soft Skills Section -->
    <div class="soft-skills">
        <h3>Soft Skills</h3>
        <% if (softSkills && softSkills.length > 0) { %>
            <ul>
                <% softSkills.forEach(function(skill) { %>
                    <li><strong><%= skill.jobReqSkillName %></strong></li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No soft skills listed for this job.</p>
        <% } %>
    </div>
</div>

        <!-- Apply Button -->
        <a href="/chatbothome" class="apply-button">Apply Now</a>
    </div>
</body>
</html>
