<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Recruitment - Prime Infra</title>

    <!-- Link to Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/css/publicapplicant.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .page-banner {
            background: linear-gradient(135deg, #07ACB9, #056770);
            color: white;
            padding: 60px 20px;
            text-align: center;
        }

        .page-banner h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .page-banner p {
            font-size: 1.1rem;
            max-width: 700px;
            margin: 0 auto;
            font-weight: 300;
        }

        .job-offers {
            padding: 50px 20px 80px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .search-filter-section {
            margin-bottom: 30px;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            align-items: center;
            justify-content: space-between;
        }

        .search-bar {
            flex-grow: 1;
            max-width: 500px;
            position: relative;
        }

        .search-bar input {
            width: 100%;
            padding: 12px 45px 12px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
            transition: all 0.3s;
        }

        .search-bar input:focus {
            outline: none;
            border-color: #07ACB9;
            box-shadow: 0 0 0 3px rgba(7, 172, 185, 0.2);
        }

        .search-bar i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
        }

        .filters {
            display: flex;
            gap: 10px;
        }

        .filter-dropdown {
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background-color: white;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s;
        }

        .filter-dropdown:hover {
            border-color: #07ACB9;
        }

        .job-listing {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
            gap: 25px;
        }

        .job-count {
            font-size: 0.95rem;
            color: #666;
            margin-bottom: 20px;
        }

        .job-item {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            padding: 25px;
            transition: all 0.3s ease;
            border-top: 5px solid #07ACB9;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .job-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .job-item a {
            text-decoration: none;
            color: inherit;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .job-meta {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .job-type {
            background-color: rgba(7, 172, 185, 0.1);
            color: #07ACB9;
            padding: 4px 10px;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            margin-right: 10px;
        }

        .job-location {
            display: flex;
            align-items: center;
            color: #666;
            font-size: 0.85rem;
        }

        .job-location i {
            margin-right: 5px;
            font-size: 0.8rem;
        }

        .job-item .title {
            font-weight: 700;
            font-size: 1.3rem;
            color: #2c2c2c;
            margin-bottom: 10px;
            line-height: 1.3;
        }

        .job-item .company {
            font-size: 0.9rem;
            color: #07ACB9;
            margin-bottom: 15px;
            font-weight: 500;
            display: flex;
            align-items: center;
        }

        .job-item .company i {
            margin-right: 6px;
        }

        .job-item .description {
            font-weight: 400;
            font-size: 0.95rem;
            color: #666;
            margin-bottom: 20px;
            line-height: 1.5;
            flex-grow: 1;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .job-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: auto;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }

        .job-item .status {
            font-size: 0.85rem;
            font-weight: 500;
        }

        .job-item .status.active {
            color: #4CAF50;
        }

        .job-item .status.inactive {
            color: #f44336;
        }

        .view-job {
            background-color: #07ACB9;
            color: white;
            padding: 8px 15px;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s;
        }

        .view-job:hover {
            background-color: #056770;
        }

        .no-jobs {
            text-align: center;
            padding: 50px 0;
            color: #666;
            grid-column: 1 / -1;
        }

        .no-jobs i {
            font-size: 3rem;
            color: #ddd;
            margin-bottom: 15px;
            display: block;
        }

        @media (max-width: 768px) {
            .page-banner {
                padding: 40px 20px;
            }
            
            .page-banner h1 {
                font-size: 2rem;
            }
            
            .search-filter-section {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .search-bar {
                max-width: 100%;
                width: 100%;
            }
            
            .job-listing {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/publicheader') %>

    <!-- Banner Section -->
    <section class="page-banner">
        <h1>Explore Career Opportunities</h1>
        <p>Join our team and be part of an organization committed to excellence, innovation, and making a difference</p>
    </section>

    <!-- Job Recruitment Section -->
    <section class="job-offers">
        <!-- Search and Filter -->
        <div class="search-filter-section">
            <div class="search-bar">
                <input type="text" id="jobSearch" placeholder="Search job titles, keywords...">
                <i class="fas fa-search"></i>
            </div>
            <div class="filters">
                <select class="filter-dropdown" id="departmentFilter">
                    <option value="">All Departments</option>
                    <option value="Engineering">Engineering</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Finance">Finance</option>
                    <option value="HR">Human Resources</option>
                </select>
                <select class="filter-dropdown" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
        </div>

        <!-- Job Count -->
        <div class="job-count">
            <span id="jobCounter">
                <% if (jobpositions && jobpositions.length > 0) { %>
                    Showing <%= jobpositions.length %> jobs
                <% } else { %>
                    No job offers
                <% } %>
            </span>
        </div>

        <!-- Job Listings -->
        <div class="job-listing">
            <% if (jobpositions && jobpositions.length > 0) { %>
                <% jobpositions.forEach(function(job) { %>
                    <div class="job-item" data-department="<%= job.department || 'Unknown' %>" data-status="<%= job.isActiveJob ? 'active' : 'inactive' %>">
                        <a href="/job-details/<%= job.jobId %>">
                            <div class="job-meta">
                                <span class="job-type"><%= job.jobType || 'Full-time' %></span>
                                <span class="job-location"><i class="fas fa-map-marker-alt"></i> <%= job.location || 'Remote' %></span>
                            </div>
                            <div class="title"><%= job.jobTitle %></div>
                            <div class="company"><i class="fas fa-building"></i> <%= job.department || 'Prime Infrastructure' %></div>
                            <div class="description">
                                <%= job.jobDescrpt %>
                            </div>
                            <div class="job-footer">
                                <div class="status <%= job.isActiveJob ? 'active' : 'inactive' %>">
                                    <i class="fas <%= job.isActiveJob ? 'fa-check-circle' : 'fa-clock' %>"></i>
                                    <%= job.isActiveJob ? "Active" : "Closed" %>
                                </div>
                                <span class="view-job">View Details</span>
                            </div>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="no-jobs">
                    <i class="fas fa-briefcase"></i>
                    <p>No job offers</p>
                    <p>Please check back later for new opportunities.</p>
                </div>
            <% } %>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Job search functionality
            const searchInput = document.getElementById('jobSearch');
            const jobItems = document.querySelectorAll('.job-item');
            const jobCounter = document.getElementById('jobCounter');
            const departmentFilter = document.getElementById('departmentFilter');
            const statusFilter = document.getElementById('statusFilter');
            
            function filterJobs() {
                const searchTerm = searchInput.value.toLowerCase();
                const departmentValue = departmentFilter.value.toLowerCase();
                const statusValue = statusFilter.value.toLowerCase();
                
                let visibleCount = 0;
                
                jobItems.forEach(job => {
                    const title = job.querySelector('.title').innerText.toLowerCase();
                    const description = job.querySelector('.description').innerText.toLowerCase();
                    const department = job.dataset.department.toLowerCase();
                    const status = job.dataset.status.toLowerCase();
                    
                    const matchesSearch = title.includes(searchTerm) || description.includes(searchTerm);
                    const matchesDepartment = departmentValue === '' || department.includes(departmentValue);
                    const matchesStatus = statusValue === '' || status === statusValue;
                    
                    if (matchesSearch && matchesDepartment && matchesStatus) {
                        job.style.display = 'block';
                        visibleCount++;
                    } else {
                        job.style.display = 'none';
                    }
                });
                
                jobCounter.innerText = visibleCount > 0 ? `Showing ${visibleCount} job${visibleCount !== 1 ? 's' : ''}` : 'No job offers';
                
                // Show "no jobs" message if no results
                const noJobsMessage = document.querySelector('.no-jobs');
                if (!noJobsMessage && visibleCount === 0) {
                    const message = document.createElement('div');
                    message.className = 'no-jobs';
                    message.innerHTML = `
                        <i class="fas fa-search"></i>
                        <p>No job offers</p>
                        <p>Try adjusting your search or filters.</p>
                    `;
                    document.querySelector('.job-listing').appendChild(message);
                } else if (noJobsMessage && visibleCount > 0) {
                    noJobsMessage.remove();
                }
            }
            
            // Add event listeners
            searchInput.addEventListener('input', filterJobs);
            departmentFilter.addEventListener('change', filterJobs);
            statusFilter.addEventListener('change', filterJobs);
        });
    </script>
</body>
</html>