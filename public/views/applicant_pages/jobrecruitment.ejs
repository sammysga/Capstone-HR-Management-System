<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Recruitment - Prime Infra</title>
    <link rel="stylesheet" href="/css/publicapplicant.css">
    <style>
        /* Style for job offers */
        .job-offers {
            background-color: #fff;
            padding: 20px;
            margin: 20px 0;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            max-width: 900px;
            margin-left: auto;
            margin-right: auto;
        }

        .job-offers h2 {
            font-size: 1.8em;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .job-listing {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .job-item {
            background-color: #f4f4f4;
            padding: 20px;
            border-radius: 6px;
            font-size: 1em;
            color: #555;
            transition: background-color 0.3s ease;
        }

        .job-item:hover {
            background-color: #e0e0e0;
        }

        .job-item a {
            text-decoration: none;
            color: inherit;
        }

        .job-item .title {
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
            font-size: 1.2em;
        }

        .job-item .department {
            font-size: 0.9em;
            color: #888;
            margin-bottom: 10px;
        }

        .job-item .description {
            color: #666;
            font-size: 1em;
        }

        .job-item .status {
            color: green;
            font-weight: bold;
            margin-top: 10px;
        }

        .job-item .inactive {
            color: red;
        }

        .apply-button {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .apply-button:hover {
            background-color: #45a049;
        }

        /* Navigation styles */
        nav {
            background-color: #4CAF50;
            padding: 10px;
            text-align: center;
        }

        nav a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-weight: bold;
        }

        nav a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <nav>
        <a href="applicant_pages/about">About Us</a>
        <a href="applicant_pages/job-recruitment">Job Recruitment</a>
        <a href="applicant_pages/contact">Contact</a>
    </nav>

    <%- include('../partials/publicheader') %>

    <!-- Job Recruitment Section -->
    <section class="job-offers">
        <h2>Job Offers</h2>
        <div class="job-listing">
            <!-- Loop through the job offers passed from the controller -->
            <% if (joboffers && joboffers.length > 0) { %>
                <% joboffers.forEach(function(job) { %>
                    <div class="job-item">
                        <!-- Make job offer clickable -->
                        <a href="/job-details/<%= job.jobOfferId %>">
                            <div class="title"><%= job.jobRole %></div>
                            <div class="department">Department: <%= job.department %></div>
                            <div class="description"><%= job.description %></div>
                            <div class="status">
                                Status: <%= job.status === "Active" ? "Active" : "Inactive" %>
                            </div>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No job offers available at the moment.</p>
            <% } %>
        </div>
    </section>
</body>
</html>
