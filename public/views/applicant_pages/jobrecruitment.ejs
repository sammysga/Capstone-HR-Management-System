<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Recruitment - Prime Infra</title>
    <link rel="stylesheet" href="/css/publicapplicant.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Style for job offers */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9f9; /* Light background for the page */
        }

        .job-offers {
            background-color: #fff;
            padding: 20px;
            margin: 20px auto;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            max-width: 900px;
        }

        .job-offers h2 {
            font-size: 2em;
            font-weight: 600;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .job-listing {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .job-item {
            background-color: #f4f4f4;
            padding: 25px; /* Increased padding for a cleaner look */
            border-radius: 6px;
            font-size: 1em;
            color: #555;
            transition: background-color 0.3s ease;
            line-height: 1.6; /* Increased line-height for readability */
            letter-spacing: 0.5px; /* Subtle letter spacing */
        }

        .job-item:hover {
            background-color: #e0e0e0;
        }

        .job-item a {
            text-decoration: none;
            color: inherit;
            transition: color 0.3s ease, text-decoration 0.3s ease;
        }

        .job-item a:hover {
            color: #4CAF50; /* Change color on hover */
            text-decoration: underline; /* Underline on hover */
        }

        .job-item .title {
            font-weight: 600;
            font-size: 1.4em;
            color: #2c2c2c; /* Darker shade for title */
            margin-bottom: 10px;
        }

        .job-item .department {
            font-size: 0.9em;
            color: #757575; /* Lighter shade for department */
            margin-bottom: 10px;
        }

        .job-item .description {
            font-weight: 400;
            font-size: 1em;
            color: #666; /* Description color */
            margin-bottom: 10px;
        }

        .job-item .status {
            font-weight: bold;
            margin-top: 10px;
        }

        .job-item .inactive {
            color: #f44336; /* Red for inactive */
        }

        .apply-button {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .apply-button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <%- include('../partials/publicheader') %>

    <!-- Job Recruitment Section -->
    <section class="job-offers">
        <h2>Current Job Openings</h2>
        <div class="job-listing">
            <% if (joboffers && joboffers.length > 0) { %>
                <% joboffers.forEach(function(job) { %>
                    <div class="job-item">
                        <a href="/job-details/<%= job.jobOfferId %>">
                            <div class="title">Join Us as a <%= job.jobRole %>!</div>
                            <div class="department">
                                <i class="fas fa-building"></i> Department: <%= job.department %>
                            </div>
                            <div class="description"><%= job.description %></div>
                            <div class="status">
                                Status: <%= job.status === "Active" ? "This position is currently open!" : "This position is no longer accepting applications." %>
                            </div>
                            <div>
                                <a class="apply-button" href="/job-details/<%= job.jobOfferId %>">Apply Now!</a>
                            </div>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No job offers available at the moment.</p>
            <% } %>
        </div>
    </section>
</body>
</html>
