<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Recruitment - Prime Infra</title>
    <link rel="stylesheet" href="/css/publicapplicant.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9f9;
        }

        .job-offers {
            background-color: #fff;
            padding: 20px;
            margin: 20px auto;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            max-width: 900px;
        }

        .job-offers h2 {
            font-size: 2em;
            font-weight: 600;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .job-listing {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .job-item {
            background-color: #f4f4f4;
            padding: 25px;
            border-radius: 6px;
            font-size: 1em;
            color: #555;
            transition: background-color 0.3s ease;
            line-height: 1.6;
            letter-spacing: 0.5px;
        }

        .job-item:hover {
            background-color: #e0e0e0;
        }

        .job-item a {
            text-decoration: none;
            color: inherit;
            transition: color 0.3s ease, text-decoration 0.3s ease;
        }

        .job-item a:hover {
            color: #4CAF50;
            text-decoration: underline;
        }

        .job-item .title {
            font-weight: 600;
            font-size: 1.4em;
            color: #2c2c2c;
            margin-bottom: 10px;
        }

        .job-item .department {
            font-size: 0.9em;
            color: #757575;
            margin-bottom: 10px;
        }

        .job-item .description {
            font-weight: 400;
            font-size: 1em;
            color: #666;
            margin-bottom: 10px;
        }

        .job-item .status {
            font-weight: bold;
            margin-top: 10px;
        }

        .job-item .inactive {
            color: #f44336;
        }

        .apply-button {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .apply-button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <%- include('../partials/publicheader') %>

   <!-- Job Recruitment Section -->
   <section class="job-offers">
    <h2>Current Job Openings</h2>
    <div class="job-listing">
        <% if (jobpositions && jobpositions.length > 0) { %>
            <% jobpositions.forEach(function(job) { %>
                <div class="job-item">
                    <a href="/job-details/<%= job.jobId %>">
                        <div class="title"><%= job.jobTitle %></div>
                        <div class="department">
                            <i class="fas fa-building"></i> Location: <%= job.jobBranch %>
                        </div>
                        <div class="status">
                            Status: <%= job.isActiveJob ? "This position is currently open!" : "This position is no longer accepting applications." %>
                        </div>
                        <div>
                            <a class="apply-button" href="/job-details/<%= job.jobId %>">Apply Now!</a>
                        </div>
                    </a>
                </div>
            <% }) %>
        <% } else { %>
            <p>No job offers available at the moment.</p>
        <% } %>
    </div>
</section>
</body>
</html>