<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/applicant_chatbot.css">
    <link rel="stylesheet" href="/css/applicant_chatbot-tailwind.css">
    <title>Chat</title>
</head>
<body>

    <!-- start: Chat -->
    <section class="chat-section">
        <div class="chat-container">
            <!-- start: Sidebar -->
            <aside class="chat-sidebar">
                <div class="logo-container">
                    <img src="/images/prime_assets/primeinfra-logo-text.png" alt="Logo" class="logo">
                </div>
                <ul class="chat-sidebar-menu">
                    <li class="active">
                        <a href="#" data-title="Prime RecruitBot" id="recruitBotButton" aria-expanded="false">
                            <i class="ri-chat-3-line"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-title="Application Status Steps" id="statusStepsButton" aria-expanded="false">
                            <i class="ri-question-line"></i> 
                        </a>
                    </li>
                    
                    <li class="chat-sidebar-profile">
                        <button type="button" class="chat-sidebar-profile-toggle" aria-haspopup="true" aria-expanded="false"></button>
                        <ul class="chat-sidebar-profile-dropdown">
                            <li><a href="#"><i class="ri-user-line"></i> Profile</a></li>
                            <li><a href="#"><i class="ri-logout-box-line"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </aside>
            <!-- end: Sidebar -->

            <!-- start: Content -->
            <div class="chat-content">
                
                <!-- start: Content side -->
                <div class="content-sidebar" id="chatSidebar" style="display: none;">
                    <div class="content-sidebar-title">Prime RecruitBot</div>
                    <form action="" class="content-sidebar-form">
                        <input type="search" class="content-sidebar-input" placeholder="Search...">
                        <button type="submit" class="content-sidebar-submit">
                            <i class="ri-search-line"></i>
                        </button>
                    </form>
                    <div class="content-messages">
                        <ul class="content-messages-list">
                            <li class="content-message-title"><span>Recently</ span></li>
                            <li>
                                <a href="#" data-conversation="#conversation-1" class="chatLink">
                                    <span class="content-message-info">
                                        <span class="content-message-name">Chatbot</span>
                                        <span class="content-message-text">Lorem ipsum dolor sit amet consectetur.</span>
                                    </span>
                                    <span class="content-message-more">
                                        <span class="content-message-time">12:30</span>
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- end: Content side -->

                <!-- start: Application Status Steps Panel -->
                <div class="conversation" id="application-status-steps" style="display: none;">
                    <div class="application-status">
                        <h2>Application Status Steps</h2>
                        <ul class="application-steps-list">
                            <li>Submission of Application</li>
                            <li>Initial Screening</li>
                            <li>HR Interview</li>
                            <li>Technical Assessment</li>
                            <li>Final Interview</li>
                            <li>Offer Letter</li>
                        </ul>
                    </div>
                </div>
                
                <!-- end: Application Status Steps Panel -->

                <!-- start: Default and Conversation Panels -->
                <div class="conversation conversation-default active">
                    <i class="ri-chat-3-line"></i>
                    <p>Select chat to start job application.</p>
                </div>
                <div class="conversation" id="conversation-1" style="display: none;">
                    <div class="conversation-top">
                        <button type="button" class="conversation-back" aria-label="Back to previous conversation">
                            <i class="ri-arrow-left-line"></i>
                        </button>
                        <div class="conversation-user">
                            <div>
                                <div class="conversation-user-name">Prime RecruitBot</div>
                            </div>
                        </div>
                        <div class="conversation-buttons"></div>
                    </div>
                    <div class="conversation-main">
                        <ul class="conversation-wrapper">
                            <div class="coversation-divider"><span>Today</span></div>
                            <li class="conversation-item me">
                                <div class="conversation-item-content">
                                    <div class="conversation-item-box">
                                        <div class="conversation-item-text">
                                            <p>Hi! Welcome to Prime Infrastructure's internal applications portal. What position are you applying for?</p>
                                            <div class="conversation-item-time">12:30</div>
                                        </div>
                                        <div class="conversation-item-dropdown">
                                            <button type="button" class="conversation-item-dropdown-toggle" aria-haspopup="true">
                                                <i class="ri-more-2-line"></i>
                                            </button>
                                            <ul class="conversation-item-dropdown-list">
                                                <li><a href="#">Copy</a></li>
                                                <li><a href="#">Delete</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="conversation-form">
                        <textarea class="conversation-form-input" rows="1" placeholder="Type here..."></textarea>
                        <button type="button" class="conversation-form-button conversation-form-submit">
                            <i class="ri-send-plane-2-line"></i>
                        </button>
                    </div>
                </div>
                
                <!-- end: Default and Conversation Panels -->
            </div>
            <!-- end: Content -->
        </div>
    </section>

    <script src="/scripts/applicant_chatbot-script.js"></script>
    <script>
document.addEventListener("DOMContentLoaded", function () {
    const recruitBotButton = document.getElementById("recruitBotButton");
    const statusStepsButton = document.getElementById("statusStepsButton");
    const chatSidebar = document.getElementById("chatSidebar");
    const conversationDefault = document.querySelector(".conversation-default");
    const conversation1 = document.getElementById("conversation-1");
    const applicationStatusSteps = document.getElementById("application-status-steps");
    const chatLink = document.querySelector('.chatLink'); // Add this line to select the chat link

    // Show RecruitBot conversation
    recruitBotButton.addEventListener("click", (event) => {
        event.preventDefault();  // Prevent default link behavior
        chatSidebar.style.display = "block"; // Show chat sidebar
        conversationDefault.style.display = "block"; // Show default conversation
        conversation1.style.display = "none"; // Hide conversation 1
        applicationStatusSteps.style.display = "none"; // Hide application status steps
    });

    // Show Application Status Steps
    statusStepsButton.addEventListener("click", (event) => {
        event.preventDefault();  // Prevent default link behavior
        chatSidebar.style.display = "none"; // Hide chat sidebar
        conversationDefault.style.display = "none"; // Hide default conversation
        conversation1.style.display = "none"; // Hide conversation 1
        applicationStatusSteps.style.display = "block"; // Show application status steps
    });

    // Show the conversation when the chat link is clicked
    chatLink.addEventListener("click", (event) => {
        event.preventDefault(); // Prevent default link behavior
        chatSidebar.style.display = "block"; // Show chat sidebar
        conversationDefault.style.display = "none"; // Hide default conversation
        conversation1.style.display = "block"; // Show conversation 1
        applicationStatusSteps.style.display = "none"; // Hide application status steps
    });
});


    </script>
</body>
</html>


